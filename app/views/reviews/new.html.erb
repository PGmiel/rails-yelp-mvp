<%= simple_form_for [ @restaurant, @review ] do |f| %>
  <h2><%= @restaurant.name %></h2>
  <p id="leave-review">Please, leave a review!</p>
  <%= f.input :content %>
  <%= f.input :rating %>
  <span class="submit-button"><%= f.submit "Submit review", class: "btn btn-primary" %></span>
<% end %>
