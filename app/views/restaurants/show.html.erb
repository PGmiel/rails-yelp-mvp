<div class="show">
  <h2 class="text block"><%= @restaurant.name %></h2>
  <p><%= @restaurant.category.capitalize %></p>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">
    <span><%= review.content %></span>
    <span><%= review.rating %> <i class="fas fa-star"></i></span>
      <%= link_to "Remove",review_path(review), method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
    <% end %>
  </ul>
  <%= link_to "Back", restaurants_path(@restaurants) %>
  <%= link_to "Edit", edit_restaurant_path(@restaurant) %>
  <%= link_to "Delete", restaurant_path(@restaurant), method: :delete %>
  <%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>
</div>
